<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/pairedDeviceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paired Device"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pairedDeviceProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no paired device found"
        app:layout_constraintTop_toBottomOf="@id/pairedDeviceButton"
        app:layout_constraintStart_toStartOf="@id/pairedDeviceButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>